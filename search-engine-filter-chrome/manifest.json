{
    "manifest_version": 2,
    "name": "search-engine-filter",
    "description": "在百度谷歌等搜索引擎的搜索结果中，根据自定义的过滤规则，过滤掉来自特定网站的搜索结果",
    "version": "1.0.5",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": { 
        "scripts": [ "background.js" ] 
    },
    "permissions": [
        "activeTab",
        "storage",
        "*://*/*", 
        "downloads"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["https://www.baidu.com/*","https://www.google.com/*","https://www.google.co.jp/*","https://www.google.com.hk/*"],
            "js": ["jquery.js", "filter.js"]
        }
    ]
}

